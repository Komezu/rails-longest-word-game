<div class="container-main">
<h1 class="text-center">New Game</h1><br>

<div class="container-letters">
  <% @letters.each do |letter| %>
    <div class="card-letter"><%= letter %></div>
  <% end %>
</div>

  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join %>
    <label for="word" class="form-label">What is the longest word you can find?</label>
    <div class="input-group">
      <input type="text" name="word" id="word" class="form-control">
      <button class="btn btn-outline-secondary" type="submit">Play</button>
    </div>
  </form>
</div>
